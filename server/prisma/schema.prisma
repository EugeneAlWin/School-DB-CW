// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int       @id @default(autoincrement())
  login    String    @unique
  password String
  role     Roles     @default(PARENT)
  Teachers Teachers?
  Students Students?
  Parents  Parents?
  Admins   Admins?
}

model Teachers {
  id         Int      @id @default(autoincrement())
  user_id    Int      @unique
  subject_id Int
  name       String
  last_name  String
  surname    String
  phone      String   @default("-")
  email      String
  user       Users    @relation(fields: [user_id], references: [id])
  subject    Subjects @relation(fields: [subject_id], references: [id])
  Grades     Grades[]
}

model Students {
  id        Int       @id @default(autoincrement())
  user_id   Int       @unique
  name      String
  last_name String
  surname   String
  class     Int
  phone     String    @default("-")
  user      Users     @relation(fields: [user_id], references: [id])
  Grades    Grades[]
  Parents   Parents[]
}

model Parents {
  id         Int      @id @default(autoincrement())
  user_id    Int      @unique
  student_id Int
  name       String
  last_name  String
  surname    String
  phone      String   @default("-")
  user       Users    @relation(fields: [user_id], references: [id])
  student    Students @relation(fields: [student_id], references: [id])
}

model Admins {
  id        Int    @id @default(autoincrement())
  user_id   Int    @unique
  name      String
  last_name String
  surname   String
  phone     String @default("-")
  admin     Users  @relation(fields: [user_id], references: [id])
}

model Subjects {
  id       Int        @id @default(autoincrement())
  title    String     @unique
  Grades   Grades[]
  Teachers Teachers[]
}

model Grades {
  id         Int      @id @default(autoincrement())
  value      Int
  date       DateTime
  student_id Int
  teacher_id Int
  subject_id Int
  student    Students @relation(fields: [student_id], references: [id])
  teacher    Teachers @relation(fields: [teacher_id], references: [id])
  subject    Subjects @relation(fields: [subject_id], references: [id])
}

enum Roles {
  ADMIN
  TEACHER
  STUDENT
  PARENT
}
